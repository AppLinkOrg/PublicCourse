/**app.wxss**/
page{
  background: #f2f2f2;
}
.clear-contact{
  position: absolute;  
  opacity: 0;
}
.clear-contact-debug{ 
  opacity: 1;
  background: orange;
}
view,navigator{
  color:#333;
  font-size: 32rpx;
}
.flex-row{
  display: flex;
}
.flex-wrap{
  flex-wrap: wrap;
}
.flex-center{
  align-content: center;
  align-items: center;
}
.flex-1{
  flex:1;
}
.text-center{
  text-align: center;
}
.text-right{
  text-align: right;
}
.white-block{
  background: white;
}
.primary-block{
  background: #BF8436;
  color:white;
}
.bg-primary{
  background: #BF8436;
}

.txt-primary{
  color:#BF8436;
}
.txt-white{
  color:white;
}
.txt-gray{
  color:#ddd;
}
.nowrap{
  word-break:keep-all;           /* 不换行 */
white-space:nowrap;          /* 不换行 */
overflow:hidden;               /* 内容超出宽度时隐藏超出部分的内容 */
}
.h1{
  font-size: 64rpx;
}
.h2{
  font-size: 56rpx;
}
.h3{
  font-size: 48rpx;
}
.h4{
  font-size: 36rpx;
}
.h5{
  font-size: 32rpx;
}
.h6{
  font-size: 24rpx;
}
.text-underline{
  text-decoration: underline;
}
.text-line-through{
  text-decoration: line-through;
}

button[type=primary]{
  
  background-color: #BF8436;
}
button.button-hover[type=primary]{
  
  background-color: #D19F5D;
}
button[disabled][type=primary] {
  background-color: #D19F5D;
}

.input{
  border-bottom:1rpx solid #ddd;
  padding-bottom:20rpx;
}

.padding-20{
  padding:20rpx;
}
.margin-20{
  margin:20rpx;
}
.margin-top{
  margin-top:40rpx;
}
.bigheader{
  padding:30rpx;
  padding-top: 10rpx;
}
.fixedbottom{
  position: fixed;
  bottom: 0rpx;
  width: 750rpx;
  z-index: 100;
}
.fixedbottom button{
  border-radius: 0rpx;
}
.block-100{
  height: 100rpx;
}
.border-top{
  border-top: 2rpx rgba(221, 221, 221, 0.5) solid;
}

.subbar{
  padding:20rpx;
  background: white; 
  margin-top:16rpx;
  border:2rpx solid #f2f2f2;
}
.subbar .firsttab{
  width:8rpx;
  height: 32rpx;
  background: #BF8436;
  margin-left: 10rpx;
}
.subbar .secondtab{
  font-size: 30rpx;
  margin-top: 16rpx;
  line-height: 0rpx;
  color:black;
  font-weight: 550;
  margin-left: 20rpx;
  letter-spacing:2rpx;

}
.subbar .thirdtab{
  font-size: 24rpx;
  color:#999;
}
.bottom-block{
  height:30rpx;
}
.fullimg{
  width: 100%;
}
.border-bottom{
  border-bottom: 2rpx rgba(221, 221, 221, 0.5) solid;
}


.rowitem{
 padding:24rpx; 
  border-bottom:2rpx solid #f2f2f2;
}
.rowitem .imgcover{
  height: 120rpx;
  width: 120rpx;
  box-shadow: 2rpx 2rpx 1rpx #888888;
  border-radius: 4rpx;
}
.rowitem .headtitle{
  padding-left:20rpx;
  color:black;
  font-size: 32rpx;
  font-weight: 550;
}
.rowitem .headdescription{
  padding-left:20rpx;
  font-size: 24rpx;
  margin-top: 8rpx;
  color:#999;
}
.rowitem .headdescriptionicon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.rowitem .headdescriptionicontext{
  width: 100rpx;
  margin-right: 10rpx;
  color:#999;
}

.rowitem .play{
  height: 40rpx;
  width:40rpx;
  background-color:rgba(255, 255, 255, 0.5);
  position: absolute;
  margin-top: -60rpx;
  margin-left: 10rpx;
  border-radius: 20rpx;
}
.rowitem .playicon{
width: 0; 
height: 0; 
border-top: 10rpx solid transparent; 
border-left: 20rpx solid #BF8436; 
border-bottom: 10rpx solid transparent; 
margin-left: 12rpx;
margin-top: 10rpx;
}

.blockrow{
 padding:15rpx; 
 border-bottom:2rpx solid #f2f2f2;
 background: white;
}
.blockitem{
  width: 220rpx;
  margin-left: 20rpx;
}
.blockitem .imgcover{
  height: 180rpx;
  width: 180rpx;
  box-shadow: 2rpx 2rpx 1rpx #888888;
  border-radius: 4rpx;
}
.blockitem .headtitle{
  color:black;
  font-size: 28rpx;
  font-weight: 550;
}
.blockitem .headdescription{
  font-size: 24rpx;
  margin-top: 8rpx;
  color:#999;
}
.inbottomla{
  text-align: center;
  font-size: 24rpx;
  padding:10rpx;
  margin-bottom: 20rpx;
  color:#999;
}
.navigator-hover{
  background: transparent;
}

.gridrow{
  display: flex;
  flex-wrap: wrap;
  margin-left: 30rpx;
  padding-top: 30rpx;
}
.grid-item{
  width: 330rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  background: white;
  border-radius: 10rpx;
  box-shadow: 1rpx 1rpx 1rpx #ddd;
}
.grid-cover{
  width: 330rpx;
  height: 206rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.grid-cover image{
  width: 330rpx;
  height: 206rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.grid-time{
  position: absolute;
  margin-top: -40rpx;
  width: 320rpx;
  text-align: right;
  color: white;
  font-size: 22rpx;
}
.grid-title{
  padding:20rpx;
  font-size: 28rpx;
  height: 60rpx;

  overflow:hidden; 
text-overflow:ellipsis;
display:-webkit-box; 
-webkit-box-orient:vertical;
-webkit-line-clamp:2; 
}
.grid-cat{
  padding:20rpx;
  padding-top: 0rpx;
  font-size: 24rpx;
  color:gray;

}


.tabs{
  box-shadow: 0rpx 2rpx 2rpx #f2f2f2;
  background: white;
  margin-bottom: 2rpx;
}
.tab{
  text-align: center;
  font-size: 32rpx;
}
.tab .tabtext{
  padding-top:18rpx;
  padding-bottom:18rpx;
  color: #999;
}
.tab .active{
  border-bottom: 6rpx solid #BF8436;
  color:#BF8436;
}

.maintab{
  height: calc( 100vh - 88rpx );
}
.maintab-item{
  height: 100%;
}


.foreshow-item{
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-top: 30rpx;
}
.foreshow-item image{
  width:690rpx;
  height:517.5rpx;
  border-radius: 6rpx;
}
.foreshow-item .title{
  position: absolute;
  background-color: rgba(255, 255, 255, 0.7);
  color:white;
  width:670rpx;
  padding:10rpx;
  margin-top: -86rpx;
  border-bottom-left-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
  height: 60rpx;
  overflow:hidden; 
text-overflow:ellipsis;
display:-webkit-box; 
-webkit-box-orient:vertical;
-webkit-line-clamp:1; 
}
.foreshow-item .reminder{
  position: absolute;
  right: 30rpx;
  margin-top: 20rpx;
  background-color:#BF8436;
  color:white !important;
  padding: 15rpx;
  font-size: 28rpx;
}
.foreshow-item .reminder view{
  color:white;
}
.foreshow-item .reminder image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}